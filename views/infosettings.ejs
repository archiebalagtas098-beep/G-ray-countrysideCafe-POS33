<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Settings</title>
    <link rel="stylesheet" href="/settings.css">
    <link rel="stylesheet" href="/mobile-responsive.css">
    <script src="/script/session-manager.js"></script>
    <script src="/script/back-button-prevention.js"></script>
</head>
<body>
    <div id="toastContainer"></div>

    <div class="dashboard-container">
        <nav class="navbar">
            <div class="brandname">
                <div class="logo">
                    <img src="/logo.png" alt="Logo" class="logo-img">
                </div>
                <h2>Gray Countryside Cafe</h2>
            </div>
            <div class="logout-container">
                <button onclick="handleLogout()" id="logoutBtn">Logout</button>
            </div>
        </nav>

        <div class="sidebar">
            <div class="search-section">
                <input type="text" class="search" placeholder="Search..">
            </div>
            
            <ul class="dashboard-menu">
                <li><a href="/admindashboard/dashboard" onclick="showSection('dashboard')" class="active">Dashboard</a></li>
                <li><a href="/admindashboard/Inventory">Inventory</a></li>
                <li><a href="/admindashboard/salesandreports">Sales Reports</a></li>
                <li><a href="/admindashboard/orderhistory">Order History</a></li>
                <li><a href="/admindashboard/addstaff">Add Staff</a></li>
                <li><a href="/admindashboard/menumanagement">Menu Management</a></li>
                <li><a href="/admindashboard/infosettings">Settings</a></li>
            </ul>
            <footer class="sidebar-footer">
                &copy; 2026 For School Purposes Only. All rights reserved.
            </footer>
        </div>

        <div class="main-content">
            <div class="section-content active-section">
                <div class="settings-container">
                    <div class="settings-header">
                        <h1>Settings</h1>
                    </div>

                   <div class="personal-info-section">
    <h2><i class="fas fa-user"></i> Personal Information</h2>
    <div class="info-grid">
        <div class="info-item">
            <label>Full Name</label>
            <input type="text" class="info-value" id="fullNameDisplay" placeholder="Your full name">
        </div>
        <div class="info-item">
            <label>Username</label>
            <input type="text" class="info-value" id="usernameDisplay" placeholder="Your username" readonly>
        </div>
        <div class="info-item">
            <label>Email Address</label>
            <input type="email" class="info-value" id="emailDisplay" placeholder="@gmail.com">
        </div>
        <div class="info-item">
            <label>Phone Number</label>
            <input type="text" class="info-value" id="phoneDisplay" placeholder="+XXX-XXXXXXXXX">
        </div>
    </div>
    
    <button class="btn btn-edit" id="editPersonalInfoBtn" style="margin-top: 15px;">
        <i class="fas fa-edit"></i> Update Info
    </button>
</div>

                    <!-- Password Change Section -->
                    <div class="settings-section password-section">
                        <h2><i class="fas fa-lock"></i> Security & Password</h2>
                        
                        <div class="password-form-container" id="passwordFormContainer" style="display: none;">
                            <form id="passwordChangeForm">
                                <div class="form-group">
                                    <label for="currentPassword">Current Password</label>
                                    <input type="password" id="currentPassword" class="form-control" placeholder="Enter your current password" required>
                                </div>
                                
                                <div class="form-group">
                                    <label for="newPassword">New Password</label>
                                    <input type="password" id="newPassword" class="form-control" placeholder="Enter new password" required>
                                </div>
                                
                                <div class="form-group">
                                    <label for="confirmPassword">Confirm New Password</label>
                                    <input type="password" id="confirmPassword" class="form-control" placeholder="Confirm new password" required>
                                </div>
                                
                                <div class="password-form-actions">
                                    <button type="button" class="btn btn-secondary" id="cancelPasswordChangeBtn">
                                        <i class="fas fa-times"></i> Cancel
                                    </button>
                                    <button type="submit" class="btn btn-primary" id="passwordChangeBtn">
                                        <i class="fas fa-check"></i>Change Password
                                    </button>
                                </div>
                            </form>
                        </div>
                        
                        <div class="password-action-container" id="passwordActionContainer">
                            <button class="btn btn-warning" id="changePasswordModalBtn">
                                <i class="fas fa-key"></i> Update Password
                            </button>
                        </div>
                    </div>
                        
                    <div class="settings-actions">
                        <button class="btn btn-primary btn-save" id="saveBtn">
                            <i class="fas fa-save"></i> Save Changes
                        </button>
                        <button class="btn btn-secondary" id="cancelBtn">
                            <i class="fas fa-times"></i> Cancel
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="/script/infosettings.js"></script>
</body>
</html>